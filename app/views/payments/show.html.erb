<div class="container">
  <br>
  <p>
    <strong>Fecha de Pago:</strong>
    <%= @payment.dia.strftime("%d %b %Y") %>
  </p>

  <p>
    <strong>Event:</strong>
    <%= @payment.event.name %>
  </p>


  <p>
    <strong>Amount:</strong>
    <%= @payment.amount %>
  </p>

  <p>
    <strong>Folio:</strong>
    <%= @payment.folio %>
  </p>

  <p>
    <strong>Forma de Pago:</strong>
    <%= @payment.forma %>
  </p>

  <%  if current_user.has_role? :admin %>
    <%= link_to 'Edit', edit_payment_path(@payment) %>
  <% end %>
  <%= link_to 'Back', event_path(@payment.event) %>
</div>

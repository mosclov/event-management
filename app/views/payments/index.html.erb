<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Payments</h1>
  <span>
    <%= link_to 'Prospectos', prospects_path, class: 'btn btn-primary' %>
    <%= link_to 'Eventos', events_path, class: 'btn btn-primary' %>
  </span>
  <br>
  <br>
  <table>
    <thead>
      <tr>
        <th>Evento</th>
        <th>Importe</th>
        <th>Folio</th>
        <th>Dia</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.event.name %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.folio %></td>
        <td><%= payment.created_at.strftime("%d %b %Y") %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>

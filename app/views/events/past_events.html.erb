<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Events</h1>
  <span>
    <%= link_to 'Nuevo Evento', new_event_path, class: 'btn btn-primary' %>
    <%= link_to 'Eventos', events_path, class: 'btn btn-primary' %>
    <%= link_to 'Prospectos', prospects_path, class: 'btn btn-primary' %>
  </span>
  <br>
  <br>
  <div class="digg_pagination">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Tipo de evento</th>
          <th>Dia</th>
          <th>Lugar</th>
          <th>Personas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
        <tr data-link="<%= event_path(event) %>" class="trPointer">
          <td><%= event.name %></td>
          <td><%= event.event_type %></td>
          <td><%= event.date.strftime("%d %b %Y") %></td>
          <td><%= event.location %></td>
          <td><%= event.pax %></td>
          <%  if current_user.has_role? :admin %>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= will_paginate @events %>
  </div>
  <br>
  <span>
    <%= link_to 'Nuevo Evento', new_event_path, class: 'btn btn-primary' %>
    <%= link_to 'Prospectos', prospects_path, class: 'btn btn-primary' %>
  </span>
  <br>
  <br>
</div>

<script type="text/javascript">
  $("tr").click(function() {
    window.location = $(this).data("link")
  })
</script>

<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Type</th>
        <th>Date</th>
        <th>Location</th>
        <th>Pax</th>
        <th>Contact</th>
        <th>Attended by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.phone %></td>
        <td><%= event.email %></td>
        <td><%= event.event_type %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.pax %></td>
        <td><%= event.contact %></td>
        <td><%= event.attended_by %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>
  <br>
  <br>
  <%= link_to 'Prospectos', prospects_path, class: 'btn btn-primary' %>

</div>

<div class="container">
  <%= form_with(model: prospect, local: true) do |form| %>
  <% if prospect.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(prospect.errors.count, "error") %> prohibited this prospect from being saved:</h2>

    <ul>
      <% prospect.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= form.label "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label "Telefono" %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label "Correo" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label "Tipo de evento" %>
    <%= form.text_field :event_type %>
  </div>

  <div class="field">
    <%= form.label "Dia de evento" %>
    <%= form.date_select :prospect_date %>
  </div>

  <div class="field">
    <%= form.label "Lugar" %>
    <%= form.select :location, options_for_select(["Salon Azteca", "Salon Ejecutivo", "Salon Reynas", "Restaurante", "Privado"], "Salon Azteca") %>
  </div>

  <div class="field">
    <%= form.label "Personas" %>
    <%= form.number_field :pax %>
  </div>

  <div class="field">
    <%= form.label 'Status' %>
    <%= form.select :status, options_for_select(['Seguimiento', 'Confirmado', 'Declino'], 'Seguimiento') %>
  </div>

  <div class="field">
    <%= form.label 'Forma de contacto' %>
    <%= form.select :contact, options_for_select(['Persona', 'Telefono', 'Facebook', 'Bodas.mx', 'Otro'], 'Persona') %>
  </div>

  <div class="field">
    <%= form.label 'Atendido por' %>
    <%= form.select :atendido, options_for_select(['Lorena', 'Marcela'], 'Marcela') %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Crear prospecto"%>
  </div>

  <br>


  <% end %>

</div>

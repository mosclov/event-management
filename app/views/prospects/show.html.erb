<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @prospect.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @prospect.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @prospect.email %>
</p>

<p>
  <strong>Type:</strong>
  <%= @prospect.event_type %>
</p>

<p>
  <strong>Prospect date:</strong>
  <%= @prospect.prospect_date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @prospect.location %>
</p>

<p>
  <strong>Pax:</strong>
  <%= @prospect.pax %>
</p>

<br>
<div class="row">
  <div class="col-md-6 margLeft">
    <h3>Note for student:</h3>
    <%= render 'notes/form_prospect' %>
    <br/>
  </div>
</div>

<div class="row">
  <div class="col-md-6 margLeft">
    <h4>Notes:</h4>
    <table class="table table-hover">
      <% if @notes.count == 0 %>
        <em><h5>No notes yet</h5></em>
      <% else %>
        <% @notes.each do |note| %>
        <tr>
          <td>
            <!-- posting all notes for that student -->
           <small><%=note.created_at.localtime.strftime("%d %b %Y")%></small>
              <%= note.body %>
              <%= link_to 'Delete note', '#deleteNote', data: {toggle: "modal"}  %>
              <div class="modal fade" id="deleteNote" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Please confirm</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete this note?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <%= link_to 'Delete note', note, method: :delete, class: 'btn btn-primary'  %>
              <% end %>
          </td>
        </tr>
    <% end%>
    </table>
  <br/>
  </div>
</div>



